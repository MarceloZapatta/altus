{
  "name": "altus",
  "version": "3.15.1",
  "description": "Electron-based desktop wrapper for WhatsApp Web",
  "homepage": "https://altus.amanharwara.xyz",
  "repository": {
    "url": "https://github.com/amanharwara/altus"
  },
  "bugs": {
    "url": "https://github.com/amanharwara/altus/issues"
  },
  "main": "index.js",
  "author": {
    "name": "Aman Harwara",
    "email": "amanharwara@gmail.com"
  },
  "license": "GPL-3.0",
  "scripts": {
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^9.2.1"
  },
  "dependencies": {
    "@simonwep/pickr": "^1.4.6",
    "choices.js": "^9.0.1",
    "color": "^3.1.2",
    "custom-electron-titlebar": "^3.0.0",
    "electron-context-menu": "^0.15.0",
    "electron-store": "^5.0.0",
    "electron-windows-badge": "^1.0.5",
    "escape-string-regexp": "^2.0.0",
    "fs-extra": "^8.1.0",
    "mousetrap": "^1.6.3",
    "node-fetch": "^2.6.1",
    "stylus": "^0.54.7",
    "sweetalert2": "^8.18.3",
    "tabbyjs": "^12.0.3",
    "usercss-meta": "^0.9.0",
    "uuid": "^3.3.3"
  },
  "build": {
    "appId": "harwara.aman.altus",
    "productName": "Altus",
    "afterAllArtifactBuild": "./build/after-all-artifact-build.js",
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 400
      }
    },
    "nsis": {
      "oneClick": "false",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "allowToChangeInstallationDirectory": "true"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "category": "Chat",
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "asar": false
    },
    "protocols": [
      {
          "name": "Whatsapp Altus",
          "role": "Viewer",
          "schemes": [
              "whatsapp"
          ]
      }
    ]
  },
  "resolutions": {
    "minimist": ">=0.2.1"
  }
}
