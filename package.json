{
  "name": "altus",
  "productName": "Altus",
  "version": "4.1.0",
  "description": "Desktop client for WhatsApp Web with themes & multiple account support.",
  "main": "src/index.js",
  "homepage": "https://gitlab.com/amanharwara/altus",
  "repository": {
    "url": "https://gitlab.com/amanharwara/altus"
  },
  "bugs": {
    "url": "https://gitlab.com/amanharwara/altus/-/issues"
  },
  "scripts": {
    "start": "concurrently \"npm:svelte-dev\" \"electron-forge start\"",
    "package": "electron-builder --dir",
    "build": "yarn svelte-build && electron-builder",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "svelte-start": "sirv public"
  },
  "keywords": [
    "whatsapp",
    "whatsapp web",
    "whatsapp themes"
  ],
  "author": {
    "name": "Aman Harwara",
    "email": "amanharwara@protonmail.com"
  },
  "license": "GPL-3.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icons/icon.ico",
        "appCopyright": "Copyright (C) 2021 Aman Harwara",
        "appCategoryType": "public.app-category.social-networking"
      }
    }
  },
  "build": {
    "appId": "harwara.aman.altus",
    "productName": "Altus",
    "protocols": [
      {
        "name": "whatsapp",
        "role": "Viewer",
        "schemes": [
          "whatsapp"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "src/icons/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "background": "img/background.png",
      "icon": "src/icons/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 260,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 260,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 400
      }
    },
    "nsis": {
      "installerSidebar": "img/installerSidebar.bmp",
      "oneClick": "false",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "allowToChangeInstallationDirectory": "true"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "src/icons/icon.ico"
    },
    "linux": {
      "category": "Chat",
      "target": [
        "AppImage"
      ],
      "icon": "src/icons/icon.png"
    }
  },
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "auto-launch": "^5.0.5",
    "concurrently": "^5.3.0",
    "dragula": "^3.7.3",
    "electron-context-menu": "^2.4.0",
    "electron-dl": "^3.2.0",
    "electron-reload": "^1.5.0",
    "electron-store": "^7.0.0",
    "node-fetch": "^2.6.1",
    "sass": "^1.32.8",
    "sirv-cli": "^1.0.10",
    "stylus": "^0.54.8",
    "svelte-select": "^3.16.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "6.0.0-beta.52",
    "@rollup/plugin-commonjs": "17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/node": "^14.14.21",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "rollup": "^2.36.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.2",
    "svelte-check": "^1.1.26",
    "svelte-preprocess": "^4.6.1",
    "typescript": "^4.1.3"
  }
}
