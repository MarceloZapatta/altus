{
  "name": "altus",
  "productName": "Altus",
  "version": "4.0.0",
  "description": "WhatsApp client for desktop with themes and multiple account support",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "postinstall": "patch-package"
  },
  "keywords": [
    "altus",
    "whatsapp web",
    "electron",
    "desktop"
  ],
  "author": {
    "name": "Aman Harwara",
    "email": "amanharwara@protonmail.com"
  },
  "license": "GPL-3.0",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "altus"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/react.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload/main_window.ts"
                  }
                },
                {
                  "name": "whatsapp",
                  "js": "./src/preload/whatsapp.ts",
                  "preload": {
                    "js": "./src/preload/whatsapp.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.50",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "css-loader": "^3.4.2",
    "electron": "8.0.3",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "file-loader": "^5.1.0",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "url-loader": "^3.0.0",
    "webpack": "^4.42.0"
  },
  "dependencies": {
    "@iconify/icons-ant-design": "^1.0.6",
    "@iconify/icons-ic": "^1.0.9",
    "@iconify/react": "^1.1.3",
    "@types/dragula": "^3.7.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-modal": "^3.10.5",
    "@types/react-select": "^3.0.11",
    "@types/uuid": "^7.0.2",
    "custom-electron-titlebar": "^3.2.2-hotfix62",
    "electron-squirrel-startup": "^1.0.0",
    "hotkeys-js": "^3.7.4",
    "patch-package": "^6.2.1",
    "postinstall-postinstall": "^2.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-dragula": "^1.1.17",
    "react-modal": "^3.11.2",
    "react-select": "^3.1.0",
    "uuid": "^7.0.3"
  }
}
