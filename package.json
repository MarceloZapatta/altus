{
  "name": "altus",
  "productName": "Altus",
  "version": "4.8.1",
  "description": "Desktop client for WhatsApp Web with themes & multiple account support.",
  "main": "src/index.js",
  "homepage": "https://gitlab.com/amanharwara/altus",
  "repository": {
    "url": "https://gitlab.com/amanharwara/altus"
  },
  "bugs": {
    "url": "https://gitlab.com/amanharwara/altus/-/issues"
  },
  "scripts": {
    "start": "concurrently \"npm:svelte-dev\" \"electron .\"",
    "package": "electron-builder --dir",
    "build": "yarn svelte-build && electron-builder",
    "svelte-build": "rollup -c",
    "svelte-dev": "rollup -c -w",
    "svelte-start": "sirv public"
  },
  "keywords": [
    "whatsapp",
    "whatsapp web",
    "whatsapp themes"
  ],
  "author": {
    "name": "Aman Harwara",
    "email": "amanharwara@protonmail.com"
  },
  "license": "GPL-3.0",
  "build": {
    "appId": "harwara.aman.altus",
    "productName": "Altus",
    "protocols": [
      {
        "name": "whatsapp",
        "role": "Viewer",
        "schemes": [
          "whatsapp"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "src/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "background": "img/background.png",
      "icon": "src/icons/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 260,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 260,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 400
      }
    },
    "nsis": {
      "installerSidebar": "img/installerSidebar.bmp",
      "oneClick": "false",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "allowToChangeInstallationDirectory": "true"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "src/icons/icon.ico"
    },
    "linux": {
      "category": "Chat",
      "target": [
        "AppImage"
      ],
      "icon": "src/icons/icon.png"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "dragula": "^3.7.3",
    "electron-context-menu": "^3.6.0",
    "electron-dl": "^3.4.1",
    "electron-reload": "^1.5.0",
    "electron-store": "^8.1.0",
    "i18next": "^21.9.2",
    "i18next-fs-backend": "^1.1.5",
    "node-fetch": "^2.6.7",
    "sass": "^1.55.0",
    "stylus": "^0.59.0",
    "svelte-select": "^4.4.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^18.11.9",
    "concurrently": "^7.5.0",
    "electron": "^21.2.2",
    "electron-builder": "^23.6.0",
    "rollup": "^2.79.1",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.52.0",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  }
}
